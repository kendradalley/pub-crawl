<h1 class="text-center">Create a new Pub Crawl</h1>
<div class="container-fluid">
  <form>
<div class="well col-md-10">
<%= form_for :event, :html => {:class => "form-horizontal center"} do |f| %>

<div class="form-group clearfix">
  <%= f.label :name, "Title:", class: "col-md-2 control-label" %>
  <div class="col-md-8">
  <%= f.text_field :name, placeholder: "What's the pub crawl called?", class: "form-control input-lg" %>
  </div>
  </div>
  <div class="form-group clearfix">
    <%= f.label :date, "Date:", class: "col-md-2 control-label" %>
  <div class="col-md-8">
  <%= f.date_field :date, placeholder: "Enter a date", class: "form-control input-lg" %>
  </div>
  </div>
  <div class="form-group clearfix">
    <%= f.label :time, "Time:", class: "col-md-2 control-label" %>
  <div class="col-md-8">
  <%= f.time_field :time, placeholder: "Enter a start time", class: "form-control input-lg"  %>
  </div>
  </div>
  <div class="form-group clearfix">
    <%= f.label :image, "Attach Image(optional):", class: "col-md-2 control-label" %>
  <div class="col-md-8">
  <%= f.file_field :image, placeholder: "Attach an image", class: "form-control input-lg"  %>
  </div>
  </div>
    <div class="form-group clearfix text-center">
  <div class="btn">
  <%= f.submit "Make it so", class: "btn btn-primary btn-lg m-x-auto" %>
<% end %>
  </div>
  </div>
</div>
</form>
</div>

