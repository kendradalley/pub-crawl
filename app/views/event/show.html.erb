

<div class="headerImg">
  <h1 id="eventTitle" class="text-center"><%= @event.name %></h1>
  <div><%= cl_image_tag(@event.image)%></div>
</div>

<div class="container crawls-well show-margin">
<div class="row">
<div class="col-xs-8">
<h3 id="eventDate" class="text-left"><%= @event.date %></h3>
</div> <!-- end div class="col-xs-8" -->
<div class="col-xs-4">
<h3 id="eventTime"><%= @event.time %></h3>
</div><!-- end div class="col-xs-4" -->
</div><!-- end div class="row" -->
<div class='divLast'>
</div>
</div>
<div class="container locations">
<h3>Crwlers</h3>
  <ul>
    <% @event.users.each do |user| %>
      <li> <%= user.username %> </li>
    <% end %>
<a href="join/<%=@event.id%>">Join this crawl</a>
  </ul>
<h3>Locations:</h3>
<ul>
  <% @event.locations.each do |location| %>
    <% if !location.has_been_visited %>
      <li> <%= location.name %> / <%= location.address %> /Arrive: <%= location.arrivetime %> /Leave <%= location.departtime %> </li>
    <% else %>
      <li> <strike> <%= location.name %> / <%= location.address %> /Arrive: <%= location.arrivetime %> /Leave <%= location.departtime %> </strike> </li>
    <% end %>
  <% end %>
</ul>
</div>

<div id="map-container">
  <div id="map-canvas"></div>
</div>

<% if @user == @event.users[@event.users.length - 1] %>
  <h3> Event Admin </h3>
  <p>Mark a location as visited</p>
    <% @event.locations.each do |location| %>
    
    <li> <%= location.name %> / <%= location.address %> <a href="left/<%= @event.id %>/<%=location.id%>"> Mark as left </a></li>

  <% end %>

  <p>Add a Stop To This Crawl</p>

  <%= form_for :location do |f| %>
    <%= f.text_field :name, placeholder: "what's this place called?" %>
    <br>
    <%= f.text_field :address, placeholder: "What's it's address" %>
    <br>
    <%= f.text_field :arrivetime, placeholder: "Enter a start time" %>
    <br>
    <%= f.text_field :departtime, placeholder: "when are ya gonna leave?" %>  
    <br>
    <%= f.text_field :latitude, placeholder: "lat (approx)" %>  
    <br>
    <%= f.text_field :longitude, placeholder: "long (approx)" %>
    <br>
    <%= f.submit "Add Stop" %>
  <% end %>
    <a class="btn btn-danger" href="delete/<%=@event.id%>"><span class="glyphicon glyphicon-fire" aria-hidden="true"></span> NUKE THIS CRAWL <span class="glyphicon glyphicon-fire" aria-hidden="true"></span></a>
<% end %>



<script src="<%=@map_url%>" async defer></script>

<script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 47.6205, lng: 122.3493},
          zoom: 8
        });
      }
</script>
